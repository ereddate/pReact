						<a href="">menu</a>
						<a href="">menu</a>
						<a href="">menu</a>
						<a href="">menu</a>
					</span>
					<i class="header_nav_close" onClick="{{ this.menuButtonClick }}">close</i>
					<i class="header_nav_open" onClick="{{ this.menuButtonClick }}">menu</i>
				</nav>
			</header>
		);
	}
});
pReact.renderDom(
	<headerView />,
	document.getElementById("header")
);