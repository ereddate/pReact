var newsListTip = pReact.createClass({
	remove: function(){
		var dom = document.getElementById("newslist_tip");
		dom && dom.parentNode.removeChild(dom);
	},
	render: function(){
		return (
			<style>
				.newslist_tip{
				    text-align: center;
				    font-size: .5rem;
				    color: rgb(120,120,120);
				}
			</style>
			<div class="newslist_tip" id="newslist_tip">{{ message }}</div>
		);
	}
});
