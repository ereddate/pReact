pReact.renderDom(
	<newsList />,
	document.getElementById("inputprice0"),
	function(){
		var num = 0;
		pReact.jq(window).on("scroll", function(){
			var top = pReact.jq(this).scrollTop();
			if (num <2 && top+screen.height >= pReact.jq(document.body)[0].scrollHeight/2){
				console.log(num);
				if (num <= 1){
					num++;
					newsListTip.remove();
					var msg = num<2 ? "正在加载..." : "没有了...";
					pReact.renderDom(
						<newsListTip {message: msg}/>,
						document.getElementById("newslist_contents_message")
					);
					pReact.renderDom(
						<newsListItem />,
						document.getElementById("newslist_contents_items")
					);
					num<2 && newsListTip.remove();
				}
			}
		});
	}
);
pReact.renderDom(
	<newsListItem />,
	document.getElementById("newslist_contents_items")
